{
  "id": "Cmake_Build_Tests",
  "title": "Amazon FreeRTOS Cmake Build Test",
  "details": "this test case will run Cmake build validation. This test will invoke a native build in order to see if cmake configuration is valid to build a test project.",
  "execution": {
    "timeout": 600000,
    "mac": {
      "cmd": "./../../../afq_mac_x86-64",
      "args": [
        "run-test",
        "--test-group",
        "CmakeBuildTests",
        "--src-path",
        "{{userData.sourcePath}}",
        "--test-artifacts-path",
        "{{testData.testArtifactsPath}}",
        "--test-tmp-src-code-path",
        "{{testData.sourcePath}}",
        "--cmake-configuration",
        "{\"boardName\":\"{{userData.cmakeConfiguration.boardName}}\", \"vendorName\":\"{{userData.cmakeConfiguration.vendorName}}\", \"afrToolchainPath\":\"{{userData.cmakeConfiguration.afrToolchainPath}}\", \"compilerName\":\"{{userData.cmakeConfiguration.compilerName}}\", \"cmakeToolchainPath\":\"{{userData.cmakeConfiguration.cmakeToolchainPath}}\"}"
      ]
    },
    "linux": {
      "cmd": "./../../../afq_linux_x86-64",
      "args": [
        "run-test",
        "--test-group",
        "CmakeBuildTests",
        "--src-path",
        "{{userData.sourcePath}}",
        "--test-artifacts-path",
        "{{testData.testArtifactsPath}}",
        "--test-tmp-src-code-path",
        "{{testData.sourcePath}}",
        "--cmake-configuration",
        "{\"boardName\":\"{{userData.cmakeConfiguration.boardName}}\", \"vendorName\":\"{{userData.cmakeConfiguration.vendorName}}\", \"afrToolchainPath\":\"{{userData.cmakeConfiguration.afrToolchainPath}}\", \"compilerName\":\"{{userData.cmakeConfiguration.compilerName}}\", \"cmakeToolchainPath\":\"{{userData.cmakeConfiguration.cmakeToolchainPath}}\"}"
      ]
    },
    "win": {
      "cmd": "./../../../afq_win_x86-64.exe",
      "args": [
        "run-test",
        "--test-group",
        "CmakeBuildTests",
        "--src-path",
        "{{userData.sourcePath}}",
        "--test-artifacts-path",
        "{{testData.testArtifactsPath}}",
        "--test-tmp-src-code-path",
        "{{testData.sourcePath}}",
        "--cmake-configuration",
        "{\"boardName\":\"{{userData.cmakeConfiguration.boardName}}\", \"vendorName\":\"{{userData.cmakeConfiguration.vendorName}}\", \"afrToolchainPath\":\"{{userData.cmakeConfiguration.afrToolchainPath}}\", \"compilerName\":\"{{userData.cmakeConfiguration.compilerName}}\", \"cmakeToolchainPath\":\"{{userData.cmakeConfiguration.cmakeToolchainPath}}\"}"
      ]
